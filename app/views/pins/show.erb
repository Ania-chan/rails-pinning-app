<div class="header">
  <h1>
  <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <% if @pin.image.exists? %>
        <img src="<%= @pin.image.url(:medium) %>" class="img-responsive">
      <% else %>
        <img src="http://placebear.com/300/300" class="img-responsive">
      <% end %>
    </div>
    <div class=" col-xs-12 col-md-8">
      <p><%= "#{@pin.text}" %></p>
    </div>
</div>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
  <p>
  This pin has been pinned by...
  <% @users.each do |user| %>
    <%= "#{user.first_name} #{user.last_name} |" %>
    <% end %>
  </p>
  <%= link_to edit_pin_path(@pin), class: "btn btn-sm btn-default", method: "get" do %>
    Edit
  <% end %>  
  	<%= render partial: "shared/repin_form", locals: { pin: @pin } %> 
</div>
<br/>
<a href="/">
<i class="fa fa-chevron-left"></i>
  Back to Home
</a>
