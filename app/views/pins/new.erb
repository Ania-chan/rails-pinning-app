  <div class="row">
    <div class="col-md-6">
    <% if !@errors.nil? %>
      <div class="error alert alert-dangers">
        <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
        <ul>
          <% @errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h1>New Pin</h1>
      <%= form_for @pin do |f| %>
        <div class="form-group">
          <label for="pin_title">Title</label>
          <%= f.text_field :title, class:'form-control' %>

          <label for="pin_url">url</label>
          <%= f.text_field :url, class:'form-control' %>

          <label for="pin_slug">slug</label>
          <%= f.text_field :slug, class:'form-control' %>

          <label for="pin_text">Descriptions</label>
          <%= f.text_area :text, class:'form-control', rows: "6" %>
        
          <label for="category_id">Category</label>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: 'form-control'}) %>

          </div>
          <%= f.submit class:'btn btn-default' %>
      <% end %>
    </div>
  </div>